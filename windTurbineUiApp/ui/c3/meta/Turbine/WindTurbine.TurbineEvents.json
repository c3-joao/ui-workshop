{
  "type": "UiSdlConnected<UiSdlDataGrid>",
  "applicationStateRef": {
    "id": "WindTurbine.UiSdlApplicationStateWT"
  },
  "component": {
    "header": {
      "title": "All Turbine Events"
    },
    "paginationConfig": {
      "pageSize": 10,
      "pagination": true
    },
    "reorderableColumns": false,
    "filterBar": true,
    "dataSpec": {
      "dataType": "WindTurbineEvent",
      "contextVars": {
        "turbineId": {
          "type": "UiSdlPageParam",
          "path": "pageId"
        }
      },
      "columnFields": [
        {
          "fieldName": "id",
          "label": "id",
          "sortable": true,
          "searchable": true
        },
        {
          "fieldName": "start",
          "label": "start",
          "sortable": true,
          "searchable": true
        },
        {
          "fieldName": "end",
          "label": "end",
          "sortable": true,
          "searchable": true
        },
        {
          "fieldName": "event_code",
          "label": "event code",
          "sortable": true,
          "searchable": true
        }
      ]
    },
    "rowActions": [
      {
        "type": "UiSdlDataGridRowAction",
        "name": "Delete With Confirmation",
        "actionSuffix": "DELETE_CUSTOM",
        "iconSuffix": "trash"
      }
    ]
  },
  "effectTriggers": [
    {
      "trigger": "WindTurbine.TurbineEvents.ROW_ACTION_CLICK_POPUP",
      "effectType": "UiSdlEpicShowUiSdlModal",
      "payload": {
        "modal": "WindTurbine.TurbinesModal",
        "applicationStateForPayload": {
          "id": "WindTurbine.UiSdlApplicationStateWT",
          "trigger": "WindTurbine.UiSdlApplicationStateWT.ROW_RECORD_STORE"
        }
      },
      "payloadStrategy": "MERGE"
    },
    {
      "trigger": "WindTurbine.TurbineEvents.ROW_ACTION_CLICK_DELETE_CUSTOM",
      "effectType": "UiSdlEpicDeleteTurbineEvent",
      "payload": {
        "modal": "WindTurbine.TurbineDeleteEventConfirmationModal",
        "componentId": "WindTurbine.UiSdlApplicationStateWT"
      },
      "payloadStrategy": "MERGE"
    }
  ]
}