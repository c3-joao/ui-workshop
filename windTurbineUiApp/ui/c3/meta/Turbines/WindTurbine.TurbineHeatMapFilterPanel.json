{
  "type": "UiSdlConnected<UiSdlFilterPanel>",
  "component": {
    "title": {
      "title": "WindTurbine Heatmap Filter Panel"
    },
    "dataSpec": {
      "dataType": "WindTurbine",
      "actionName": "fetch",
      "actionArgs": {
        "spec": {
          "include": "this"
        }
      },
      "fieldSets": [
        {
          "title" : "Location",
          "collapsed" : false,
          "fields" : [ {
            "type": "UiSdlFieldSetFilterFieldSetting",
            "fieldName": "latitude",
            "label": "Latitude",
            "componentsToFilterMapping": {
              "value": {
                "WindTurbine.TurbinesMap": {
                  "Turbine": "latitude"
                }
              }
            },
            "filterElement": {
              "type": "UiSdlNumberRangeInputFilterField",
              "inputElement": {
                "min": 30,
                "max": 50,
                "markStep": 5
              }
            }
          }, {
            "type": "UiSdlFieldSetFilterFieldSetting",
            "fieldName": "longitude",
            "label": "Longitude",
            "componentsToFilterMapping": {
              "value": {
                "WindTurbine.TurbinesMap": {
                  "Turbine": "longitude"
                }
              }
            },
            "filterElement": {
              "type": "UiSdlNumberRangeInputFilterField",
              "inputElement": {
                "min": -120,
                "max": 20,
                "markStep": 20
              }
            }
          }]
        },
        {
          "title": "Make",
          "fields": [
            {
              "type": "UiSdlFieldSetFilterFieldSetting",
              "label": "Manufacturer",
              "fieldName": "model.manufacturer.name",
              "filterElement": {
                "type": "UiSdlMultipleSearchFilterField",
                "inputElement": {
                  "serverSearch": false,
                  "clear": true,
                  "fluid": true,
                  "placeholder": "Manufacturer",
                  "dataSpec": {
                    "dataType": "Turbine",
                    "actionName": "fetch",
                    "args": {
                      "spec": {
                        "include": "model.manufacturer.name"
                      }
                    },
                    "dataTransforms": ["UiSdlTransformFetchResultToArray"]
                  },
                  "valueField": "model.manufacturer.name",
                  "displayField": "model.manufacturer.name"
                }
              },
              "componentsToFilterMapping": {
                "value": {
                  "WindTurbine.TurbinesMap": {
                    "Turbine": "model.manufacturer.name"
                  }
                }
              }
            },
            {
              "type": "UiSdlFieldSetFilterFieldSetting",
              "fieldName": "model.modelName",
              "label": "Model",
              "componentsToFilterMapping": {
                "value": {
                  "WindTurbine.TurbinesMap": {
                    "WindTurbine": "model.modelName"
                  }
                }
              },
              "filterElement": {
                "type": "UiSdlMultipleSearchFilterField",
                "inputElement": {
                  "clear": true,
                  "fluid": true,
                  "placeholder": "Model",
                  "dataSpec": {
                    "dataType": "Turbine",
                    "actionName": "fetch",
                    "args": {
                      "spec": {
                        "include": "model.modelName, model.manufacturer"
                      }
                    },
                    "dataPath": "objs",
                    "valueField": "model.modelName",
                    "displayField": "model.modelName"
                  }
                }
              }
            }
          ]
        },
        {
          "type": "UiSdlFilterFieldSet",
          "title": "Events",
          "fields": [{
              "type": "UiSdlFieldSetFilterFieldSetting",
              "fieldName": "eventType",
              "label": "Event Codes",
              "filterElement": {
                "type": "UiSdlMultipleSearchFilterField",
                "inputElement": {
                  "clear": true,
                  "fluid": true,
                  "placeholder": "Event Code",
                  "dataSpec": {
                    "dataType": "TurbineEvent",
                    "actionName": "fetch",
                    "args": {
                      "spec": {
                        "include": "eventType"
                      }
                    },
                    "dataPath": "objs",
                    "valueField": "eventType",
                    "displayField": "eventType"
                  }
                }
              }
            }
          ]
        }
      ]
    }
  }, 
  "effectTriggers": [
    {
      "trigger": "WindTurbine.TurbineHeatMapFilterPanel.SINGLE_INPUT_CHANGE",
      "effectType": "WindTurbineEpicUpdateCity"
    },
    {
      "trigger": "WindTurbine.TurbineHeatMapFilterPanel.FILTER_SUBMIT",
      "effectType": "WindTurbineEpicFilterHeatMap"
    }
  ]
}
